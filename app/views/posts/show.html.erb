<p id="notice"><%= notice %></p>

<% unless @post.user.nil? %>
<p>
  <strong>Author:</strong>
  <%= link_to h(@post.user.full_name), @post.user.identifier_url %>
</p>
<% end %>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
